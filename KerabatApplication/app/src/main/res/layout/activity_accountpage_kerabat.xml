<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountPageKerabatActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_buttonAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:src="@drawable/back_page"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/namePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/akun"
                app:layout_constraintBottom_toBottomOf="@id/back_buttonAccount"
                app:layout_constraintStart_toEndOf="@id/back_buttonAccount"
                app:layout_constraintTop_toTopOf="@id/back_buttonAccount"
                app:layout_constraintVertical_bias="0.42" />

            <ImageView
                android:id="@+id/ppAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_buttonAccount" />

            <ImageButton
                android:id="@+id/editPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/note_kerabat"
                app:layout_constraintBottom_toBottomOf="@id/ppAccount"
                app:layout_constraintEnd_toEndOf="@id/ppAccount" />

            <TextView
                android:id="@+id/nameAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Muhammad Rafli"
                android:textColor="#1C3B60"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/emailAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ppAccount" />

            <TextView
                android:id="@+id/emailAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Rafli@gmail.com"
                android:textColor="#5C6066"
                app:layout_constraintBottom_toTopOf="@+id/noTlpAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvNoTelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="No Telp"
                app:layout_constraintBottom_toTopOf="@+id/tvUmur"
                app:layout_constraintEnd_toStartOf="@+id/noTlpAccount"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailAccount"
                app:layout_constraintVertical_bias="0.619" />

            <TextView
                android:id="@+id/tvUmur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Umur"
                app:layout_constraintBottom_toTopOf="@+id/tvGender"
                app:layout_constraintEnd_toStartOf="@+id/ageAccount"
                app:layout_constraintHorizontal_bias="0.389"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Jenis Kelamin"
                app:layout_constraintBottom_toTopOf="@+id/tvAddres"
                app:layout_constraintEnd_toStartOf="@+id/genderAccount"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvAddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Alamat"
                app:layout_constraintBottom_toTopOf="@+id/edit_Button"
                app:layout_constraintEnd_toStartOf="@+id/addressAccount"
                app:layout_constraintHorizontal_bias="0.826"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/noTlpAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="089876543210"
                android:textColor="#1C3B60"
                app:layout_constraintBottom_toTopOf="@+id/ageAccount"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/ageAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="20 Tahun"
                android:textColor="#1C3B60"
                app:layout_constraintBottom_toTopOf="@+id/genderAccount"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/genderAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Pria"
                android:textColor="#1C3B60"
                app:layout_constraintBottom_toTopOf="@+id/addressAccount"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/addressAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Jalan Kaki No 4 Jakarta"
                android:textColor="#1C3B60"
                app:layout_constraintBottom_toTopOf="@+id/edit_Button"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/edit_Button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FCCC12"
                android:fontFamily="@font/poppins_bold"
                android:text="EDIT"
                android:textColor="#1C3B60"
                android:textSize="20sp"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/logout_Button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/logout_Button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#E91E63"
                android:fontFamily="@font/poppins_bold"
                android:text="LOG OUT"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>